COMPILEFLAGS = -std=c++0x -Wall -pedantic -Wno-long-long @(INCLUDEDIRECTORIES) @(CFLAGS) -I@(ROOT)
ifeq (@(DEBUG),true)
	COMPILEFLAGS += -ggdb -O0
else
	COMPILEFLAGS += -O3 -DNDEBUG
endif

!object = |> @(COMPILER) $(COMPILEFLAGS) -c %f -o %o |> %o
!executable = |> @(COMPILER) $(COMPILEFLAGS) @(LIBDIRECTORIES) %f @(LIBRARIES) -o %o |> %o
!lightarchive = |> ar rsT %o %f |> %o

